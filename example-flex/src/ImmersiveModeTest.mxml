<s:Application
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	applicationDPI="160"
	backgroundColor="#CCFF00"
	preinitialize="preinitializeHandler(event)"
	resize="resizeHandler(event)"
	addedToStage="addedToStageHandler(event)"
	>
	
	<fx:Script>
		<![CDATA[
			import com.mesmotronic.ane.ImmersiveMode;
			
			import mx.events.FlexEvent;
			import mx.events.ResizeEvent;
			
			protected function preinitializeHandler(event:FlexEvent):void
			{
				currentState = ImmersiveMode.isSupported ? 'supported' : 'notSupported';
				
				NativeApplication.nativeApplication.addEventListener(ImmersiveMode.ANDROID_WINDOW_FOCUS_IN, focusHandler);
				NativeApplication.nativeApplication.addEventListener(ImmersiveMode.ANDROID_WINDOW_FOCUS_OUT, focusHandler);
			}
			
			protected function focusHandler(event:Event):void
			{
				trace(event.type);
			}
			
			protected function resizeHandler(event:ResizeEvent=null):void
			{
				if (stage)
				{
					trace("stage:", stage.stageWidth, "x", stage.stageHeight);
				}
			}
			
			protected function addedToStageHandler(event:Event):void
			{
				ImmersiveMode.stage = stage;
				resizeHandler();
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="supported" />
		<s:State name="notSupported" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout 
			horizontalAlign="center"
			verticalAlign="middle"
			gap="5" 
			/>
	</s:layout>
	
	<s:Label 
		text.supported="Welcome to immersive mode! :-)"
		text.notSupported="Sorry, immersive mode isn't supported on this device :-("
		textAlign="center"
		fontWeight="bold"
		width="85%"
		/>
	
	<s:Spacer height="50" />
	
	<s:Label 
		text="Test" 
		verticalAlign="middle"
		height="30"
		/>
	
	<s:TextInput 
		width="75%"
		/>
	
</s:Application>
